<h2 style="color: red">Loops</h2>

<p id="demo"></p>

<script>
var text = "";
var i = 0;
for (i = 0; i < 5; i++) {
  text += "The number is " + i + "<br>";
}
document.getElementById("demo").innerHTML = text;
</script>

<h2 style = "color: blue">While</h2>

<p id="demo1"></p>

<script>
var text = "";
var i = 0;
var j = 1;
while (i < 10) {
  text += "<br>The number is " + j;
  i++;
  j = j * 2;
}
document.getElementById("demo1").innerHTML = text;
</script>

<h2 style = "color: pink">Functions</h2>

<p>This example will calculate the 4 basic operations:</p>

<p id="demos"></p>

<script>
function sum(p1, p2) {
  return p1 + p2;
}
document.getElementById("demos").innerHTML = sum(14, 8);

</script>
<p id="demo2"></p>
<script>
function sub(p1, p2) {
  return p1 - p2;
}
document.getElementById("demo2").innerHTML = sub(47, 7);
</script>

<p id="demo3"></p>
<script>
function mul(p1, p2) {
  return p1 * p2;
}
document.getElementById("demo3").innerHTML = mul(9, 4);
</script>

<p id="demo4"></p>
<script>
function div(p1, p2) {
  return p1 / p2;
}
document.getElementById("demo4").innerHTML = div(21, 12);
</script>

<h2 style = "color: yellow">Arrays</h2>

<p id="demo5"></p>

<script>
var cs = ["CS124", "CS165", "CS235"];
var show = cs[1];
document.getElementById("demo5").innerHTML = cs[1];

</script>

<p style = "color: green">Conditional</p>

<button onclick="myFunction()">Try it</button>

<p id="conditional"></p>

<script>
function myFunction() {
  var greeting;
  var time = new Date().getHours();
  if (time < 10) {
    greeting = "Good morning";
  } else if (time < 20) {
    greeting = "Good day";
  } else {
    greeting = "Good evening";
  }
  document.getElementById("conditional").innerHTML = greeting;
}
</script>


